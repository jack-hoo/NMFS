<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.miner.dao.SysUserRoleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.miner.entity.SysUserRoleEntity" id="sysUserRoleMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.miner.entity.SysUserRoleEntity">
		select * from sys_user_role where id = #{value}
	</select>


	<select id="queryList" resultType="com.miner.entity.SysUserRoleEntity">
		select * from sys_user_role
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${order} ${sidx}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_user_role 
	</select>
	 
	<insert id="save" parameterType="com.miner.entity.SysUserRoleEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sys_user_role
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="roleId != null">`role_id` = #{roleId}</if>
		</set>
	</insert>
	 
	<update id="update" parameterType="com.miner.entity.SysUserRoleEntity">
		update sys_user_role 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="roleId != null">`role_id` = #{roleId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_user_role where id = #{value}
	</delete>
    <delete id="deleteByUserId">
        delete from sys_user_role where user_id = #{value}
    </delete>
	<delete id="deleteBatch">
		delete from sys_user_role where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>